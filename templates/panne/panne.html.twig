{% extends 'base.html.twig' %}

{% block title %}Colbert support - {{ catPannes.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-3 mb-3">Liste des Pannes de {{ pannes[0].categorie.name }} <span
                    class="badge badge-secondary">{{ pagination.getTotalItemCount }}</span></h1>
        <div class="list-group">
            {% for panne in pagination %}
                <div class="list-group-item list-group-item-action">
                    <div class="row">
                        <div class="col-md-9 ">

                            <a href="{{ path('detail',{'id':panne.id}) }}"><h5 class="mb-1">{{ panne.description }}</h5>
                            </a>
                            <p class="mb-1">{{ panne.solution  | u.truncate(100, '...', false) }}</p>
                            <small>Solutionn√© par <a href="{{ path('profil',{'id':panne.user.id}) }}">{{ panne.user.firstName }} {{ panne.user.lastName }}</a> </small>

                        </div>

                        <div class="col-md-3 ">
                            <div class="col-md-12 text-right mr-5">
                                {% set myOlderDate = panne.createdAt | date %}
                                <small class="">{{ myOlderDate|ago }}</small>
                            </div>
                            <div class="col-md-12 mt-2 mb-2 text-right">
                                <a href="" class="btn btn-sm btn-warning ">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a onclick="confirm('Etes vous sur de vouloir supprimer {{ panne.description }} ?')"
                                   href="" class="btn btn-sm btn-danger ">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="mt-3">{{ knp_pagination_render(pagination) }}</div>

{% endblock %}
